<h1>This is our Blog</h1>
<% count = 1 %>
<% @blog_posts.each do |blog_post| %>
  <div class="mb-10">
    <div class="flex flex-row">
      <div class="text-2xl">
        <span class="text-base ">
          <%= count %>
          <% count += 1 %>
        </span>
        <%= link_to blog_post.title, blog_post_path(blog_post.id) %>
      </div>
      <% if blog_post.is_draft? %>
        <div class="bg-red-100 ml-4 px-2 py-[0px] rounded-sm text-gray-900 ">
          Draft 
        </div>
      <% elsif blog_post.is_scheduled? %>
        <div class="bg-blue-100 ml-4 px-2 py-[0px] rounded-sm text-gray-900 ">
          Scheduled
        </div>
      <% end %>
    </div>
    <div> <%= blog_post.body %> </div>
  </div>
<% end %>