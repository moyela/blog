<h2>
  <%= link_to "Home", root_path %>
</h2>
<% if user_signed_in? %>
  <div>
    <%= link_to "Edit this Post", edit_blog_post_path %>
  </div>
<% end %>
<div class="flex flex-row">
  <span class="text-4xl font-bold text-black"><%= @blog_post.title %></span>
  <% if @blog_post.is_draft? %>
    <div class="bg-gray-100 ml-4 px-2 mt-2 rounded-sm text-gray-900 ">
      Draft 
    </div>
  <% elsif @blog_post.is_scheduled? %>
    <div class="bg-blue-100 ml-4 px-2 mt-2 rounded-sm text-gray-900 ">
      Scheduled
    </div>
  <% else @blog_post.is_published? %>
    <div class="bg-green-100 ml-4 px-2 mt-2 rounded-sm text-gray-900 ">
      Published
    </div>
  <% end %>
</div>
<div>
  <%= @blog_post.body %>
</div>